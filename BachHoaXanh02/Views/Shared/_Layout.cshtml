    <script>
        function moveSlide(sliderId, direction) {
            const slider = document.getElementById(sliderId);
            const productWidth = slider.children[0].offsetWidth + 20;
            slider.scrollBy({
                top: 0,
                left: productWidth * direction,
                behavior: 'smooth'
            });
        }
    </script>
</body>

</html>
